{
    "name": "ahmedmerza/logscope",
    "description": "A fast, database-backed log viewer for Laravel applications",
    "keywords": [
        "laravel",
        "logs",
        "logging",
        "log-viewer",
        "debugging",
        "monitoring"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "AhmedMerza",
            "email": "ahmedmerzaali@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "LogScope\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LogScope\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LogScope\\LogScopeServiceProvider"
            ],
            "aliases": {
                "LogScope": "LogScope\\Facades\\LogScope"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "format": "pint"
    }
}
